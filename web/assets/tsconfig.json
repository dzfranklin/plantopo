{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "moduleResolution": "node",
    // Required by @headlessui/react
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": [
      "jest"
    ],
    "composite": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    ".",
    "**/*.json"
  ],
  "exclude": [
    "**/node_modules/**",
    "vendor/collaboration-kit/**/tests",
  ],
}
